altura = float(input('Qual é a sua altura em cm: '))
peso = float(input('Qual é o seu peso em kg: '))

IMC = peso / (altura/100)**2

print(round(IMC,1))

if IMC < 18.5:
    print(f'Seu IMC é de {round(IMC,1)}, e é classificado como magreza')

elif IMC >= 18.5 and IMC < 24.9:
    print(f'Seu IMC é de {round(IMC,1)}, e é classificado como normal')

elif IMC >= 25 and IMC < 29.9:
    print(f'Seu IMC é de {round(IMC, 1)},e é classificado como sobrepeso')

elif IMC >= 30 and IMC <39.9:
    print (f'Seu IMC é de {round(IMC,1)}, e é classificado como obesidade')

else:
    print("Pode parar de comer e comçar a malhar, pois o negócio está feio! Obesidade grave!")
